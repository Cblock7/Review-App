<div class="col text-center">
  <h1>UPCOMING SHOWS</h1>
  {{#each concerts as |concert|}}
    <ul>
      <ui>{{concert.venue}}</ui>
      <ui>{{concert.date}}</ui>
      <ui>{{concert.city}}</ui>
    </ul>
  {{/each}}

</div>
<div class="col text-center">
  <h1>COMMENTS</h1>
  {{#each reviews as |user|}}
    <div class="col">
      <p>{{user.name}}: {{user.review}}</p>
    </div>
  {{/each}}
</div>
<div class="row justify-content-center">
  <div>
    <h1>ONLINE MOSH</h1>
    <form id="mosh-submit-button">
      <div class="form-group">
        <label for="mosh-name-input">Name</label>
        <input
          type="text"
          class="form-control"
          id="mosh-name-input"
          placeholder="Name"
        />
      </div>
      <div class="form-group">
        <label for="mosh-email-input">Email</label>
        <input
          type="email"
          class="form-control"
          id="mosh-email-input"
          placeholder="name@email.com"
        />
      </div>
      <div class="form-group">
        <label for="mosh-text-area">Comment below: </label>
        <textarea class="form-control" id="mosh-text-area" rows="3"></textarea>
      </div>

      <button type="submit" class="btn btn-dark">
        Submit
      </button>

    </form>
  </div>
</div>
<script src="/js/create-review.js"></script>