<div class="row justify-content-center p-3">
  <h1>UPCOMING SHOWS</h1>
</div>
  <div class="row justify-content-center">
    <div id="show-card" class="card bg-dark border border-danger p-3">
      <div class="card-body">{{#each concerts as |concert|}}
          <ul class="pl-3 pr-3">
            <ui>{{concert.date}} |</ui>
            <ui>{{concert.venue}} |</ui>
            <ui>{{concert.city}}</ui>
          </ul>
        {{/each}}</div>
    </div>
  </div>

</div>
<div class="d-flex justify-content-center">
  <h1>ONLINE MOSH</h1>
</div>
<div class="row p-3">
  <div class="d-flex flex-column align-items-center col-6">
    <div id="mosh-display-card" class="card bg-dark border border-danger w-100">
      <div id="mosh-display-body" class="card-body p-3">{{#each reviews as |user|}}
          <div class="col">
            <p class="h4">{{user.name}}: {{user.review}}</p>
          </div>
        {{/each}}</div>
    </div>
  </div>
  <div class="d-flex flex-column align-items-center col-6">
    <form
      class="bg-dark border rounded border-danger justify-content-center"
      id="mosh-submit-button"
    >
      <div class="d-flex justify-content-center align-items-center p-1">
        <h2 class="pt-3">Get in the pit!</h2>
      </div>
      <div class="form-group pl-3 pr-3">
        <label for="mosh-name-input">Name</label>
        <input
          type="text"
          class="form-control"
          id="mosh-name-input"
          placeholder="Your name here"
        />
      </div>
      <div class="form-group pl-3 pr-3">
        <label for="mosh-email-input">Email</label>
        <input
          type="email"
          class="form-control"
          id="mosh-email-input"
          placeholder="name@email.com"
        />
      </div>
      <div class="form-group pl-3 pr-3">
        <label for="mosh-text-area">Comment below: </label>
        <textarea
          class="form-control"
          id="mosh-text-area"
          rows="3"
          placeholder="Keep it classy!"
        ></textarea>
      </div>
      <div class="d-flex justify-content-center col-12 pt-1 pb-3">
        <button type="submit" class="btn btn-dark">Submit</button>
      </div>
    </form>

  </div>
</div>
<script src="/js/create-review.js"></script>