<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../public/css/jass.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
      integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../public/css/style.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=ZCOOL+KuaiLe&display=swap"
      rel="stylesheet"
    />
    <title>Trilogybyte</title>
  </head>
  <body>
    <div class="d-flex justify-content-center">
      <header>Trilogybyte</header>
    </div>
    <main class="container">
      <div class="row justify-content-center">
        <img
          src="https://images.unsplash.com/photo-1601266289415-e7339a97d19b?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80"
          alt="guitar and pedals strewn on the floor"
        />
      </div>
      <div class="row justify-content-center">
        <h1>UPCOMING SHOWS</h1>
      </div>
      <div class="row justify-content-center">
        <div>
          <h1>ONLINE MOSH</h1>
          <form>
            <div class="form-group">
              <label for="mosh-name-input">Name</label>
              <input
                type="text"
                class="form-control"
                id="mosh-name-input"
                placeholder="Name"
              />
            </div>
            <div class="form-group">
              <label for="mosh-email-input">Email</label>
              <input
                type="email"
                class="form-control"
                id="mosh-email-input"
                placeholder="name@email.com"
              />
            </div>
            <div class="form-group">
              <label for="mosh-text-area">Comment below: </label>
              <textarea
                class="form-control"
                id="mosh-text-area"
                rows="3"
              ></textarea>
            </div>

            <button type="submit" id="mosh-submit-button" class="btn btn-dark">
              Submit
            </button>

          </form>
        </div>
      </div>
    </main>
  </body>
</html>